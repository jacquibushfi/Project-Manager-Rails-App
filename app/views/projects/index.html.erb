
<h1>Projects</h1>
<!-- <a href="/users/most_projects"> Click here to see who has the most projects!</a> -->





<div class="container ">
  <div class="row" id="projects">
    <% @projects.all.each do |project| %>
          <div class="col-sm-4 mb-3 ">
            <div id="project-<%= project.id %>" class="col-md-12 bg-secondary pb-3 rounded">

              <br>
              <button type="button" data-project-id="<%= project.id %>" class="project-more btn btn-primary m-1" data-toggle="collapse" data-target="#project-<%= project.id %>-tasks"><%= project.name %> </button>

              <div id="project-<%= project.id %>-tasks" class="tasks">
              </div>

              <div id="newTaskForm-<%= project.id %>" class="collapse">
              </div>

            <br><button type="button" class="new-task btn btn-dark m-1" data-project-id="<%= project.id %>" data-toggle="collapse" data-target="#newTaskForm-<%= project.id %>" aria-expanded="false" aria-controls="" >Add Task</button>
            </div>
          </div>
    <% end  %>

    <div class="col-sm-4 mb-3 ">
      <div class="" id="add-project">
        <button type="button" class="text-center col-md-12 py-3 rounded btn btn-info " name="">New Project</button>
      </div>
    </div>
    
  </div>
</div>


<!--  MODAL -->
<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content" >
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" >

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

      </div>
    </div>
  </div>
</div>
