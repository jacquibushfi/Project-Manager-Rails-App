<% if @task.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@task.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @task, controller: "tasks", action: "create" do |f| %>
  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_field :description%>
  </div>


  <div class="form-group">
    <%= f.label :due_date, "Due_date"%>
    <%= f.date_select :due_date%>
  </div>

  <!-- add drop down of existing projects-->
  <div class="form-group">
    <%= f.label :project_id, "Select the Project for this task:" %><br>
    <%= f.collection_select :project_id, Project.all, :id, :name %>
  </div>

  <% if @user %>
     <%= f.hidden_field :user_id  %>
  <% else  %>
    <div class="form-group">
      <%= f.label :user_id, "Select the User for this task:" %><br>
      <%= f.collection_select :user_id, User.all, :id, :username %>
    </div>
  <% end  %>


  <div class="actions">
    <%= f.submit "Create", class: "btn btn-primary" %>
  </div>

<% end  %>
